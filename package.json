{
  "name": "nzcore",
  "version": "1.0.0",
  "description": "Personal autonomous Root of Trust - deterministic identity and cryptographic document chain. RFC 8785, Ed25519, BIP-39, logical time, fork detection.",
  "keywords": [
    "cryptography",
    "identity",
    "root-of-trust",
    "ed25519",
    "blake2b",
    "rfc8785",
    "canonical-json",
    "bip39",
    "scrypt",
    "hkdf",
    "deterministic",
    "offline-first",
    "logical-time",
    "fork-detection",
    "zeroize"
  ],
  "homepage": "https://github.com/NewZoneProject/nzcore",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NewZoneProject/nzcore.git"
  },
  "bugs": {
    "url": "https://github.com/NewZoneProject/nzcore/issues"
  },
  "license": "MIT OR Apache-2.0",
  "author": "NewZoneCore Contributors",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "browser": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.cts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "API_SPEC.md",
    "LICENSE-MIT",
    "LICENSE-APACHE"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:types": "tsc --project tsconfig.types.json",
    "build:tests": "npx tsc test/*.test.ts --outDir ./dist --module esnext --moduleResolution node --target es2020 --esModuleInterop --skipLibCheck",
    "build:examples": "npx tsc examples/*.ts --outDir ./dist --module esnext --moduleResolution node --target es2020 --esModuleInterop --skipLibCheck",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts",
    "test": "node --loader ts-node/esm --test dist/test/**/*.test.js",
    "example": "node --loader ts-node/esm dist/examples/*.js",
    "example:basic": "node --loader ts-node/esm dist/examples/basic-usage.js",
    "example:advanced": "node --loader ts-node/esm dist/examples/advanced-usage.js",
    "bench": "ts-node benchmark/index.ts",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:report": "eslint src/**/*.ts --output-file eslint-report.json --format json",
    "docs": "typedoc --out docs src/index.ts",
    "docs:serve": "npx serve docs",
    "docs:clean": "rm -rf docs"
  },
  "dependencies": {
    "@noble/ed25519": "1.7.3",
    "@noble/hashes": "^1.4.0",
    "@scure/bip39": "^1.3.0",
    "canonicalize": "^2.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "c8": "^9.1.0",
    "eslint": "^8.57.1",
    "globals": "^17.3.0",
    "rimraf": "^5.0.5",
    "serve": "^14.2.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.17",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false
}
